<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-3 mx-auto">
    <div class="card my-5 shadow">
      <div class="card-body m-3">
        <h2>Sign up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%if @user.errors.any? %>
            <div id="error_explanation">
              <div class="alert alert-danger">
                The form contains <%= pluralize(@user.errors.count, "error") %>.
              </div>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
           <div class="field mt-4">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control  col-md-3 mr-1" %>
          </div>

          <div class="field mt-4">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control  col-md-3 mr-1" %>
          </div>

          <div class="field mt-4">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control  col-md-3 mr-1"%>
          </div>

          <div class="field mt-4">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control  col-md-3 mr-1" %>
          </div>

          <div class="actions mt-4">
            <%= f.button "Sign Up", class:"btn btn-lg btn-primary btn-block form-control col-md-3 mr-1", id: 'btnFetch' %>
          </div>
          <div class="text-center mt-4">
            <%- if controller_name != 'sessions' %>
              <%= link_to "Log in", new_session_path(resource_name) %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
